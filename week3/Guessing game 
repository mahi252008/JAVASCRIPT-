<body>
  <button id="game-start">Start Game</button>
  <br><br>
  
  <label for="user-input">Guess the Number:</label>
  <input type="number" id="user-input" placeholder="ex: 5" />
  <button id="submit">Submit</button>
  <br><br>
  
  <label id="turn">Turn: 0</label><br>
  <label id="hint"></label>

  <script src="javascript.js"></script>
</body>
</html>
