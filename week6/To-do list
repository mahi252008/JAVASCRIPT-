<html>
<head>
<title></title>
</head>
<body>
	<h1>Todo App</h1>
	
	
	<input type="text" class="todo-input">
	<button onclick="addtodo()" class="add-btn">Add todo</button>
	
	<ul class="todo-list"> <li>Example Task</li></ul>
		
	<script src="todo.js"></script>
	
</body>
</html>



const todo_list = document.querySelector('.todo-list')
const input_box = document.querySelector('.todo-input')

var todos = []

function addtodo(){
	var todo_text = input_box.value
	todos.push(todo_text)
	display()
}

function display(){
	todo_list.innerHTML = ""
	todos.forEach(function(t, i){
		const todo = document.createElement("li")
		console.info(todo.attributes)
		todo.textContent = t
		const delBtn = document.createElement("button");
		delBtn.textContent = "delete"
		const editBtn = document.createElement("button");
		editBtn.textContent = "edit"
		
		
		delBtn.onclick = function(){
			todos.splice(i, 1);
			display();
		};
		
		editBtn.onclick = function(){
			const newText = prompt("Edit Task : ", t);
			console.log(newText);
		};
		
		todo.appendChild(delBtn)
		todo.appendChild(editBtn)
		todo_list.appendChild(todo)
		
		
		
		
	 });
}
display()